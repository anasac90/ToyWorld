<%- include ('../partials/user-header.ejs') %>

    <main class="mt-3" style="height: auto;"">
        <div class=" content-head">
        <div class="content-head-rect col-5 bg-dark-grn">
            <div>
                <h2 class="content-head-txt">ORDER STATUS</h2>
            </div>
            <div class="content-head-tri ms-auto"></div>
        </div>
        </div>
        <% if(status) { %>
            <div class="content-body side-margin text-center mt-3 text-success"
                style="justify-content: center;flex-direction: column;">
                <div>
                    <h2>
                        <%= status %>
                    </h2>
                </div>
                <div class="mt-3">
                    <a href="/" style="text-decoration: none;">
                        <button class="btn bg-dark-grn" style="color: white;">CONTINUE SHOPPING</button>
                    </a>
                    <a href="/orders" style="text-decoration: none;">
                        <button class="btn bg-dark-grn" style="color: white;">GOTO ORDERS</button>
                    </a>
                </div>
            </div>
            <% } else { %>
                <div class="content-body side-margin text-center mt-3 text-danger"
                    style="justify-content: center;flex-direction: column;">
                    <div>
                        <h2>
                            <%= warning %>
                        </h2>
                    </div>
                    <div class="mt-3">
                        <a href="/" style="text-decoration: none;">
                            <button class="btn bg-dark-grn" style="color: white;">CONTINUE SHOPPING</button>
                        </a>
                        <a href="/orders" style="text-decoration: none;">
                            <button class="btn bg-dark-grn" style="color: white;">GOTO ORDERS</button>
                        </a>
                    </div>
                </div>
                <% } %>
    </main>



    <%- include ('../partials/user-footer.ejs') %>