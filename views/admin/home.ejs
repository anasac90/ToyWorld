<%- include ('../partials/admin-header.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<main class="mt-3" style="min-height: 80vh;">
    <div class="content-head">
        <div class="content-head-rect col-5 bg-dark-grn">
            <div>
                <h2 class="content-head-txt">DASHBOARD</h2>
            </div>
            <div class="content-head-tri ms-auto"></div>
        </div>
    </div>
    
    <div class="content-body side-margin text-center mt-3 d-flex">
        <div class="sidebar" style="min-width: 200px;">
            <a class="active" href="/admin/home">DASHBOARD</a>
            <a href="/admin/products">PRODUCTS</a>
            <a href="/admin/users">USERS</a>
            <a href="/admin/categories">CATEGORIES</a>
            <a href="/admin/orders">ORDERS</a>
            <a href="/admin/coupons">COUPONS</a>
            <a href="/admin/offers">OFFERS</a>
            <a href="/admin/report">REPORT</a>
        </div>

        <div class="dashboard-content w-100 p-3 text-start">
            
            <% if(bestSellingProducts.length == 0 && bestSellingCategories.length == 0) { %>
                <div class="d-flex w-100 justify-content-center align-items-center" style="height: 50vh;">
                    <h3>No orders data available yet</h3>
                </div>
            <% } else { %>
                
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-white bg-primary mb-3 shadow-sm" style="max-width: 18rem;">
                            <div class="card-header">Total Revenue</div>
                            <div class="card-body">
                                <h5 class="card-title">â‚¹ <%= (typeof totalRevenue !== 'undefined') ? totalRevenue : 0 %></h5>
                                <p class="card-text"><small>Lifetime earnings</small></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-success mb-3 shadow-sm" style="max-width: 18rem;">
                            <div class="card-header">Total Orders</div>
                            <div class="card-body">
                                <h5 class="card-title"><%= (typeof totalOrders !== 'undefined') ? totalOrders : 0 %></h5>
                                <p class="card-text"><small>Processed orders</small></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-warning mb-3 shadow-sm" style="max-width: 18rem;">
                            <div class="card-header">Total Products</div>
                            <div class="card-body">
                                <h5 class="card-title"><%= (typeof totalProducts !== 'undefined') ? totalProducts : 0 %></h5>
                                <p class="card-text"><small>Active inventory</small></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-info mb-3 shadow-sm" style="max-width: 18rem;">
                            <div class="card-header">Current Filter</div>
                            <div class="card-body">
                                <h5 class="card-title text-uppercase"><%= (typeof currentFilter !== 'undefined') ? currentFilter : 'Yearly' %></h5>
                                <p class="card-text"><small>Sales View</small></p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-5">
                    <div class="col-lg-8">
                        <div class="card shadow-sm">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Sales Analytics</h5>
                                <div class="chart-filters">
                                    <button class="btn btn-sm btn-outline-primary btn-filter" data-filter="yearly">Yearly</button>
                                    <button class="btn btn-sm btn-outline-primary btn-filter" data-filter="monthly">Monthly</button>
                                    <button class="btn btn-sm btn-outline-primary btn-filter" data-filter="weekly">Weekly</button>
                                </div>
                            </div>
                            <div class="card-body">
                                <canvas id="salesChart"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="card shadow-sm h-100">
                            <div class="card-header">
                                <h5 class="mb-0">Category Sales</h5>
                            </div>
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <canvas id="categoryChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm h-100">
                            <div class="card-header bg-dark text-white">
                                Top 10 Products
                            </div>
                            <ul class="list-group list-group-flush">
                                <% if(bestSellingProducts) { %>
                                    <% bestSellingProducts.forEach((product, index) => { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <%= index + 1 %>. <%= product.name %>
                                            <span class="badge bg-primary rounded-pill"><%= product.sales %></span>
                                        </li>
                                    <% }); %>
                                <% } %>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm h-100">
                            <div class="card-header bg-dark text-white">
                                Top Categories
                            </div>
                            <ul class="list-group list-group-flush">
                                <% if(bestSellingCategories) { %>
                                    <% bestSellingCategories.forEach((cat, index) => { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <%= index + 1 %>. <%= cat.name %>
                                            <span class="badge bg-success rounded-pill"><%= cat.sales %></span>
                                        </li>
                                    <% }); %>
                                <% } %>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm h-100">
                            <div class="card-header bg-dark text-white">
                                Top Brands
                            </div>
                            <ul class="list-group list-group-flush">
                                <% if(bestSellingBrands) { %>
                                    <% bestSellingBrands.forEach((brand, index) => { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <%= index + 1 %>. <%= brand.name %>
                                            <span class="badge bg-info rounded-pill"><%= brand.sales %></span>
                                        </li>
                                    <% }); %>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</main>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        
        const currentPath = window.location.pathname;
        const buttons = document.querySelectorAll(".btn-filter");
        
        buttons.forEach(button => {
            if(currentPath.includes(button.getAttribute('data-filter'))) {
                button.classList.add('active', 'bg-primary', 'text-white');
                button.classList.remove('btn-outline-primary');
            }
            
            button.addEventListener('click', (e) => {
                e.preventDefault();
                let filterOption = button.getAttribute('data-filter');
                window.location = `/admin/home/${filterOption}`;
            });
        });

        
        const salesLabels = <%- JSON.stringify(salesLabels || []) %>;
        const salesData = <%- JSON.stringify(salesData || []) %>;

        
        const catLabels = <%- JSON.stringify(catLabels || []) %>;
        const catData = <%- JSON.stringify(catData || []) %>;

        // chart
        const ctxSales = document.getElementById('salesChart').getContext('2d');
        new Chart(ctxSales, {
            type: 'bar',
            data: {
                labels: salesLabels,
                datasets: [{
                    label: 'Sales Revenue',
                    data: salesData,
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        const ctxCat = document.getElementById('categoryChart').getContext('2d');
        new Chart(ctxCat, {
            type: 'doughnut',
            data: {
                labels: catLabels,
                datasets: [{
                    data: catData,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(75, 192, 192, 0.7)'
                    ],
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                    }
                }
            }
        });
    });
</script>

<%- include ('../partials/admin-footer.ejs') %>