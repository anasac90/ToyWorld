<%- include ('../partials/admin-header.ejs') %>


    <main class="mt-3" style="height: auto;"">
        <div class=" content-head">
        <div class="content-head-rect col-5 bg-dark-grn">
            <div>
                <h2 class="content-head-txt">EDIT CATEGORY</h2>
            </div>
            <div class="content-head-tri ms-auto"></div>
        </div>
        </div>
        <div class="content-body side-margin text-start mt-3" style="justify-content: center;">
            <form autocomplete="off" action="/admin/categories/update" enctype="multipart/form-data" method="POST"
                class="col-4">
                <div class="col mb-3">
                    <label>Category Name:</label>
                    <input class="form-control" value="<%= queriedCategory[0].categoryName %>" name="categoryName"
                        required type="text">
                </div>
                <div class="col mb-3">
                    <label>Description:</label>
                    <textarea class="form-control" name="categoryDescription" required
                        type="text"><%= queriedCategory[0].categoryDescription %></textarea>
                </div>
                <div class="mb-3">
                    <label>Image:</label>
                    <div class="mb-2">
                        <img src="/images/<%= queriedCategory[0].categoryImage %>" style="width: 70px; height: 70px;"
                            alt="">
                    </div>
                    <input class="form-control mb-1" type="file" accept="image/*" name="categoryImage" />
                </div>
                <div>
                    <button type="Edit" class="btn" style="color: white; background-color: #66A5AD;">
                        Update
                    </button>
                </div>
            </form>
        </div>
    </main>

    <%- include ('../partials/admin-footer.ejs') %>